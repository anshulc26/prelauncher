#main-heading
	.col.md-12
		My Business Garage 
		%h6 THANK YOU FOR SIGNING UP
.clearfix
#refer{style: "background-image: #{Setting.additional_image.present? ? 'url(' + asset_url(Setting.additional_image.url) + ');' : 'auto'}"}
	.col-md-5.col-md-offset-1.col-sm-12.refer-left
		%img{src: "/assets/business.gif"}
		#copy
			%h3.color-black Anyone can be an Entrepreneur
	.col-md-5.col-sm-6.col-xs-12
		#copy
			%h3.color-black Don't leave your friends behind 
			%h1 Invite friends & Earn Stuff

		%input.form-control{value: "#{@user.referral_url(root_url)}"}
		%p.color-black
			Share your unique link via email, Facebook or Twitter and earn free stuff for each friend who signs up.

		= render partial: "social_sharing"


%aside.text-center
	%h4
		%span Here's How It Works: 

- if Prize.all.any?
	%section#prizes
		.progressbar{style: "width: #{@user.progress * 100}%"}
			.progress-box
		= render partial: "prizes/prize_item", collection: Prize.all.order("number_of_referrals asc"), as: :prize

%footer#footer
	%h4
		%strong= pluralize(@user.number_of_referrals, 'friend')
		%span have joined so far.
	%h5 Keep checking